<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <h1 class="text-center">Preguntas</h1>
      <%= link_to 'New Question', new_question_path, class:"btn btn-primary" %>
      <table class="table">
        <thead>
          <th>VOTOS</th>
          <th>RESPUESTAS</th>
          <th>PREGUNTAS</th>
          <th>OPCIONES</th>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%=question.votes.where(:amount => true).count - question.votes.where(:amount => false).count %></td>
              <td><%= question.answers.size %></td>
              <td><%= question.title %></td>
              <td><%= link_to 'Mostrar', question, class: 'btn btn-success' %><%= link_to 'Editar', edit_question_path(question), class: 'btn btn-primary' %><%= link_to 'Eliminar', question, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
