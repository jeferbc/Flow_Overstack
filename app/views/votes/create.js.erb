$("#total-votes-<%= @votable.class.name %>-<%= @votable.id %>").text(<%= @votes %>);
<% if @votable.kind_of?(Question) %>
  $("#votes-<%= @votable.class.name %>-<%= @votable.id %>").replaceWith('<%= j render "votes_panel", { votable: @votable, path_up: question_vote_path(@votable, @vote), path_down: question_vote_path(@votable, @vote), verb: :delete } %>');
  $("#votes-<%= @votable.class.name %>-<%= @votable.id %>").addClass('already-vote')
<% else %>
  $("#votes-<%= @votable.class.name %>-<%= @votable.id %>").replaceWith('<%= j render "votes_panel", { votable: @votable, path_up: question_answer_vote_path(@votable.question, @votable, @vote), path_down: question_answer_vote_path(@votable.question, @votable, @vote), verb: :delete } %>');
  $("#votes-<%= @votable.class.name %>-<%= @votable.id %>").addClass('already-vote')
<% end %>
