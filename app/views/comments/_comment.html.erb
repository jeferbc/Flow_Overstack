<div class="panel panel-default" id="<%= comment.id %>">
  <div class="panel-heading">
    <span class="comment-user"><%= comment.user.email %></span> ha comentado hace <%= distance_of_time_in_words(Time.current, comment.created_at) %>
    <% if current_user == comment.user %>
      <h3 class="panel-title-right">
        <%# link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> '.html_safe, edit_comment_path(person_id: comment.user.id, id: comment.id), remote: true %>
        <%# link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> '.html_safe, comment_path(person_id: comment.user.id, id: comment.id), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"}, remote: true %>
      </h3>
    <% end %>
  </div>
  <div class="panel-body">
    <p class="content"><%= markdown(comment.content) %></p>
  </div>
</div>
