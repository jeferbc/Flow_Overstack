<%= puts comment.commentable %>
<div class="panel panel-default" id="<%= comment.id %>">
  <div class="panel-heading">
    <span class="comment-user"><%= comment.user.email %></span> ha comentado hace <%= distance_of_time_in_words(Time.current, comment.created_at) %>
    <% if current_user == comment.user %>
      <h3 class="comment-icons">
        <% if comment.commentable.kind_of?(Question) %>
          <%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> '.html_safe, edit_question_comment_path(id: comment.id, question_id: comment.commentable.id), remote: true -%>
          <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> '.html_safe, question_comment_path(id: comment.id, question_id: comment.commentable.id), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"}, remote: true %>
        <% elsif comment.commentable.kind_of?(Answer) %>
          <%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> '.html_safe, edit_question_answer_comment_path(id: comment.id, answer_id: comment.commentable.id), remote: true -%>
          <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> '.html_safe, question_answer_comment_path(id: comment.id, answer_id: comment.commentable.id), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"}, remote: true %>
        <% end %>
      </h3>
    <% end %>
  </div>
  <div class="panel-body">
    <p class="content"><%= markdown(comment.content) %></p>
  </div>
</div>
