<% if @comment.errors.empty?  %>
  $('.visible-comments-<%= @commentable.class.name %>-<%= @commentable.id %>').prepend(' <%= j render "comments/comment", comment: @comment %>');
  $('#comment-content-<%= @commentable.class.name %>-<%= @commentable.id %>').val("");
  $('#comment-<%= @commentable.class.name %>-<%= @commentable.id %>').remove();
<% end %>
